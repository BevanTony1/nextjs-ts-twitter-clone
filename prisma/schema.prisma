// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Account {
  id                  Int      @id @default(autoincrement())
  CompoudId           String   @unique @map(name: "compoud_id")
  userId              Int      @map(name: "user_id")
  providerType        String   @map(name: "provider_type")
  providerAccountType String   @map(name: "provider_account_type")
  refreshToken        String   @map(name: "refresh_token")
  accessToken         String   @map(name: "access_token")
  accessTokenExpires  String   @map(name: "access_token_expire")
  createAt            DateTime @default(now()) @map(name: "created_at")
  updatedAt           DateTime @default(now()) @map("updated_at")


  @@index([providerAccountType], name: "providerAccountId")
  @@index([providerType], name: "providerId")
  @@index([userId], name: "userId")
}

model User {
  id            Int      @id @default(autoincrement())
  name          String?
  email         String?  @unique
  emailVerified DateTime @map("email_verfified")
  image         String?
  createAt      DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @default(now()) @map("updated_at")

  @@map("users")
}

model Session {
  id           Int      @id @default(autoincrement())
  userId       Int      @map("user_id")
  expires      DateTime
  sessionToken String   @unique @map("session_token")
  accesssToken String   @map("access_token")
  createAt     DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @default(now()) @map("updated_at")

  @@map("sessions")
}

model VerificationRequest {
  id         Int      @id @default(autoincrement())
  identifier String
  token      String   @unique
  expires    DateTime
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @default(now()) @map("updated_at")

  @@map("verification_requests")
}
